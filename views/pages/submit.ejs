<!-- views/pages/submit.ejs -->
<!DOCTYPE html>
<html ng-app="windham">
    <head>
        <% include ../partials/head %>
    </head>

    <body>
        <% include ../partials/header %>
        <div class="container" ng-controller="TabsController">
            <ul class="nav nav-tabs nav-justified" ng-click="displayTab($event)">
                <li data-content="text-input" role="presentation" class="tab active"><a href="#">Text</a></li>
                <li data-content="url-input" role="presentation" class="tab"><a href="#">Web Page</a></li>
                <li data-content="audio-input" role="presentation" class="tab"><a href="#">Audio</a></li>
            </ul>

            <div class="tab-content tab-content-active" id="text-input">
                <% include ../partials/inputs/text %>
            </div>
            <div class="tab-content tab-content-inactive" id="url-input">
                <% include ../partials/inputs/url %>
            </div>
            <div class="tab-content tab-content-inactive" id="audio-input">
                <% include ../partials/inputs/audio %>
            </div>
        </div>
    </body>
</html>
